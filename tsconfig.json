	"compilerOptions": {
		"target": "es2019",
		"lib": ["es2019", "dom"],
		"module": "System",
		"declaration": false,
		"outFile": "./dist/index.js",
		"strict": true, // Kengaytirilgan sinashni yoqish
		"esModuleInterop": true, // CommonJS va ES modullari o'rtasida muvofiqlikni ta'minlash
